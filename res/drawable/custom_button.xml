<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/boton_focused"
                android:endColor="@color/boton_focused_gradient"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/boton_focused_gradient" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/boton_focused"
                android:startColor="@color/boton_focused_gradient"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/boton_focused_gradient" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/amarillo_buenos_aires"
                android:startColor="@color/amarillo_buenos_aires_gradient"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/amarillo_buenos_aires_gradient" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>